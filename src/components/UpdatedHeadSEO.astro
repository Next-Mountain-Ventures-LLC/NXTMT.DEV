---
import "@/styles/global.css";
import "@/styles/fonts.css";
import seoImage from '@/assets/mockuuups-iphone-14-pro-held-by-businessperson-2_nw_458ce8ed.png';

interface Props {
  title?: string | undefined;
  description?: string | undefined;
  ogImage?: URL | undefined;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageUrl = new URL(seoImage.src, Astro.site);

const { title = "NXTMT - Creative Studio", description = "We build digital experiences that inspire. NXTMT is a creative studio and wefghdfhgfghfghb agency specializing in web design, branding, development, and digital marketing." } = Astro.props;
---

<meta charset="utf-8" />
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content="new.website - https://new.website" />
<link rel="canonical" href={canonicalURL} />
<link
  rel="shortcut icon"
  type="image/svg+xml"
  href={`${Astro.site}favicon.svg`}
/>
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content="web design, creative studio, web agency, digital experiences, branding, development, digital marketing" />
<meta name="author" content="COSMIC Studio" />
<meta name="theme-color" content="#7e22ce" />

<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:site_name" content="COSMIC Studio" />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImageUrl} />
<meta property="twitter:creator" content="@cosmicstudio" />

<!-- DO NOT REMOVE - Plausible Analytics must always be enabled -->
<script is:inline>
  // Plausible Analytics - Dynamic Domain Detection
  // This script automatically detects the current domain and loads Plausible analytics
  (function() {
    const hostname = window.location.hostname;
    
    // Only track production domains (exclude localhost, IP addresses, etc.)
    if (hostname !== 'localhost' && !hostname.match(/^\d+\.\d+\.\d+\.\d+$/)) {
      const script = document.createElement('script');
      script.defer = true;
      script.setAttribute('data-domain', hostname);
      script.src = 'https://plausible.io/js/script.js';
      document.head.appendChild(script);
    }
  })();
</script>