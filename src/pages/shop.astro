---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HeroParticles from "@/components/shop/HeroParticles.tsx";
import ShopHero from "@/components/shop/ShopHero.tsx";
import ServiceCategoryShowcase from "@/components/shop/ServiceCategoryShowcase.tsx";
import WebServiceCarousel from "@/components/shop/WebServiceCarousel.tsx";
import DevelopmentServices from "@/components/shop/DevelopmentServices.tsx";
import IntegrationServices from "@/components/shop/IntegrationServices.tsx";
import APISolutions from "@/components/shop/APISolutions.tsx";
import BrandingServices from "@/components/shop/BrandingServices.tsx";
import SEOServices from "@/components/shop/SEOServices.tsx";
import ConsultationServices from "@/components/shop/ConsultationServices.tsx";
import SupportServices from "@/components/shop/SupportServices.tsx";
import PremiumPackages from "@/components/shop/PremiumPackages.tsx";
import ContactCTA from "@/components/shop/ContactCTA.tsx";
---

<BaseLayout
  title="Shop - NXTMT Services"
  description="Explore our premium web design, branding, and digital marketing services. Discover the perfect digital solution for your business."
>
  <div class="relative min-h-screen">
    <HeroParticles client:load />
    <div class="relative z-10">
      <ShopHero client:load />
      <div class="container mx-auto px-4 -mt-32 relative z-20">
        <ServiceCategoryShowcase client:load />
      </div>
    </div>
  </div>
  
  <!-- Web Development Services -->
  <WebServiceCarousel client:load />
  
  <!-- Development Services -->
  <DevelopmentServices client:load />
  
  <!-- API Solutions -->
  <APISolutions client:load />
  
  <!-- Integration Services -->
  <IntegrationServices client:load />
  
  <!-- SEO Services -->
  <SEOServices client:load />
  
  <!-- Branding Services -->
  <BrandingServices client:load />
  
  <!-- Consultation Services -->
  <ConsultationServices client:load />
  
  <!-- Support Services -->
  <SupportServices client:load />
  
  <!-- Premium Packages -->
  <PremiumPackages client:load />
  
  <!-- Contact CTA -->
  <ContactCTA client:load />
</BaseLayout>

<style>
  :global(html) {
    scroll-behavior: smooth;
  }
</style>
