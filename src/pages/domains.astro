---
import BaseLayout from "@/layouts/BaseLayout.astro";
import DomainSearch from "@/components/domains/DomainSearch";
import DomainFeatures from "@/components/domains/DomainFeatures";
import DomainPricing from "@/components/domains/DomainPricing";
import DomainFAQ from "@/components/domains/DomainFAQ";
---

<BaseLayout
  title="Domain Names - Next Mountain"
  description="Find and purchase the perfect domain name for your business or project. We offer competitive pricing and instant registration."
>
  <section class="py-16 md:py-24 relative overflow-hidden">
    <!-- Background gradient -->
    <div class="absolute inset-0 bg-gradient-to-b from-background to-background/80 z-0"></div>
    
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0">
      <div class="absolute -top-[10%] -left-[10%] w-[40%] h-[40%] bg-primary/10 rounded-full blur-3xl"></div>
      <div class="absolute top-[60%] -right-[5%] w-[30%] h-[40%] bg-primary/10 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/70">
          Find Your Perfect Domain Name
        </h1>
        <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto">
          Your online journey starts with the right domain. Search, register, and manage domain names with ease.
        </p>
      </div>
      
      <DomainSearch client:load />
    </div>
  </section>
  
  <DomainFeatures client:load />
  
  <DomainPricing client:load />
  
  <DomainFAQ client:load />
</BaseLayout>

<style>
  :global(html) {
    scroll-behavior: smooth;
  }
</style>