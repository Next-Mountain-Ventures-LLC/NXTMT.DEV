---
import BaseLayout from "@/layouts/BaseLayout.astro";
import TestAuth from "@/components/auth/TestAuth";
import AuthProvider from "@/components/auth/AuthProvider.astro";
---

<BaseLayout title="WordPress API Test | NXTMT" description="Test page for WordPress API integration">
  <div class="container mx-auto py-16 px-4">
    <h1 class="text-3xl font-bold mb-8 text-center">WordPress API Test Page</h1>
    
    <p class="text-gray-400 max-w-2xl mx-auto mb-8 text-center">
      This page helps diagnose WordPress API integration issues. 
      Use the buttons below to test various aspects of the API communication.
    </p>
    
    <AuthProvider>
      <TestAuth client:load />
    </AuthProvider>
  </div>
</BaseLayout>