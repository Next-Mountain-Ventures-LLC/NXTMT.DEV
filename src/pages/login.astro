---
import BaseLayout from "@/layouts/BaseLayout.astro";
import LoginForm from "@/components/auth/LoginForm";
import AuthProvider from "@/components/auth/AuthProvider.astro";
---

<BaseLayout title="Login | NXTMT" description="Sign in to your account to access exclusive member content and services.">
  <AuthProvider>
    <div class="min-h-[calc(100vh-200px)] flex items-center justify-center py-16 px-4">
      <div class="w-full max-w-md">
        <LoginForm client:load />
      </div>
    </div>
  </AuthProvider>
</BaseLayout>